<h1>Registered Applications</h1>
<div class='row'>
    <div class='col-md-8'>
        <ul class='list-unstyled'>
            <% @registered_applications.each do |application| %>
                <li><h3><%= link_to application.name, registered_application_path(application.id) %></h3></li>
            <% end %>
        </ul>
    </div>
    
    <% if current_user %>
        <div class='col-md-8'>
            <h4>Register New Application</h4>
            <%=link_to "Add Application", new_registered_application_path, class:'btn btn-success' %>
        </div>
    <% end %>
</div>
